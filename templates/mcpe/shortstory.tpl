<div class="news-link grid-item">
    <style>.grid-style{display:flex}</style>
    <span class="just-news">{category}</span>
    <span class="fixed-label">Важно!</span>
    <a href="{full-link}"><h3 class="news-log">{title}</h3></a>
    <div class="poster">
        <img class="xfieldimage foto" src="{image-1}" alt="{title}">
    </div>
    <p class="description">
     {short-story limit="480"}
	 </p>
    <div class="meta-data">
        <span class="">{date}</span>
        <span class="views">{views}</span>
        <span class="author">{author}</span>
    </div>
    <a href="{full-link}" class="btn-view"><span class="ic-sx24"></span> Скачать</a>
</div>
